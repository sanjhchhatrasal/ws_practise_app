<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main min-h-screen w-full bg-slate-300 lg:p-20 px-5 py-10">
       <h1 class="text-4xl font-semibold text-center">Chatting App</h1>
        <div class="bg-slate-400 rounded-xl min-h-[70%] lg:w-[40%] w-full lg:mt-20 mt-5 lg:ml-96 ml-0 p-5 relative">
            <h1 class="content text-lg font-semibold overflow-y-auto"></h1>
             <div class="flex lg-gap-5 gap-1 w-full absolute bottom-2 text-white">
                <input class="bg-slate-600 rounded-xl px-6 py-2 lg-w-[75%] w-[80%] outline-none" type="text" placeholder="Write your message here..." name="data">
                <button class="lg:px-5 px-3 py-2 bg-blue-600 font-semibold text-white rounded-xl">Send</button>
            </div>
        </div>
  
    </div>


    <script src="https://cdn.socket.io/4.7.5/socket.io.min.js" integrity="sha384-2huaZvOR9iDzHqslqwpR87isEmrfxqyWOF7hr7BY6KG0+hVKLoEXMPUJw3ynWuhO" crossorigin="anonymous"></script>
    <script>
       let socket = io();
        let inp = document.querySelector("input")
        let btn = document.querySelector("button")
        let content = document.querySelector(".content");


        btn.addEventListener("click", function(evt){
            socket.emit("message", inp.value);
            inp.value = ""
           
        })

        socket.on("message", function(data){
             let newContent = document.createElement("p");
            newContent.textContent = data;
            content.appendChild(newContent); 
            })
        
    </script>
</body>
</html>